<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VejenFremTilDig.Views.ContactsPage"
             Title="Opkald">

    <ContentPage.Content>
        <StackLayout Spacing="0" BackgroundColor="White">
            <StackLayout HeightRequest="50" Orientation="Horizontal">
                <Image Source="PhoneIcon" HorizontalOptions="FillAndExpand" BackgroundColor="LightGray">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddClick"/>
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
            <ListView x:Name="lv_Contacts" ItemsSource="{Binding Contacts}" VerticalOptions="FillAndExpand" CachingStrategy="RecycleElement">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                <Label Text="{Binding Name}" FontSize="30" TextColor="Black"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>